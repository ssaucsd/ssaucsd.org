---
import { Music, Users, Calendar, Heart } from "lucide-react";

interface Props {
  title: string;
  description: string;
  icon: "Music" | "Users" | "Calendar" | "Heart";
  color: string;
}

const { title, description, icon, color } = Astro.props;

const icons = {
  Music,
  Users,
  Calendar,
  Heart,
};

const IconComponent = icons[icon];
---

<div class="flex gap-6 items-start">
  <div class={`${color} w-16 h-16 shrink-0 rotate-45 rounded-xl flex items-center justify-center shadow-lg`}>
    <IconComponent className="w-8 h-8 text-white -rotate-45" />
  </div>
  <div class="flex flex-col gap-2">
    <h3 class="text-2xl font-bold">{title}</h3>
    <p class="text-muted-foreground leading-relaxed">{description}</p>
  </div>
</div>
